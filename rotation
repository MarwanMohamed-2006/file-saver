    Image final_img(img.height,img.width);

    for (int i = 0; i < img.width; i++)
    {
        for (int j = 0; j < img.height; j++) 
        {
            for (int k = 0; k < 3; k++)
            {
                int x =  j ;
                int y = img.width -1-i;
                final_img(x,y,0) = img(i,j,0);
                final_img(x,y,1) = img(i,j,1);
                final_img(x,y,2) = img(i,j,2);
            }
        }
    }
    final_img.saveImage("luffyy.jpg");
    cout << "Hello" << endl;
