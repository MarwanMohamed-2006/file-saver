#include <iostream>
#include "Image_Class.h"

using namespace std;

Image frame_color_filter(Image img, string file_last_name)
{

    for (int i = 0; i < img.width; i++)
    {
        for (int j = 0; j < img.height; j++)
        {
            if (i < 20 || i >= img.width - 20 || j < 20 || j >= img.height - 20)
            {
                img(i, j, 0) = 255;
                img(i, j, 1) = 255;
                img(i, j, 2) = 255;
            }


        }
    }

    img.saveImage(file_last_name);
    return img;
}
int main()
{
    string filename, file_last_name;
    cout << "Please enter the file name with format: ";
    cin >> filename;

    Image img(filename);

    cout << "\nPlease enter the new name with the new format: ";
    cin >> file_last_name;

    frame_color_filter(img, file_last_name);

    cout << "\nImage saved with blue frame, white border, and a gap in between: " << file_last_name << endl;

    return 0;
}   
